datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String   @id()
  name           String
  handle         String
  email          String
  bio            String
  location       String
  avatarUrl      String
  followersCount Int
  followingCount Int
  createdAt      DateTime
  Tweets         Tweet[]

  @@unique([handle, email])
}

model Tweet {
  id           String     @id()
  body         String
  authorId     String
  createdAt    DateTime
  retweetCount Int
  likeCount    Int
  replyCount   Int
  visibility   visibility @default(PUBLIC)
  type         tweetType  @default(ORIGINAL)
  author       User       @relation(fields: [authorId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

enum visibility {
  PUBLIC
  PRIVATE
}

enum tweetType {
  ORIGINAL
  RETWEET
  REPLY
}
